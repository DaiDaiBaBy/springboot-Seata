<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <!-- 本地数据库驱动程序jar包的全路径 -->
    <classPathEntry location="D:\tool\maven\MavenRepository\mysql\mysql-connector-java\8.0.22\mysql-connector-java-8.0.22.jar"/>

    <context id="context" targetRuntime="MyBatis3">

        <!--实体类序列化-->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>

        <!--使用自定义lombok插件-->
        <plugin type="com.zhoufu.springbootseata.generator.LombokPlugin"/>

        <!--使用自定义配置-->
        <commentGenerator type="com.zhoufu.springbootseata.generator.MyCommentGenerator">
            <!--不生成generator自带的英文注释-->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- 数据库的相关配置 -->
        <jdbcConnection
                driverClass="com.mysql.cj.jdbc.Driver"
                connectionURL="jdbc:mysql://127.0.0.1:3306/productdb?characterEncoding=UTF-8&amp;nullCatalogMeansCurrent=true&amp;serverTimezone=UTC"
                userId="root"
                password="!QAZ1qaz">
        </jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 实体类生成的位置 targetPackage是要放置生成文件的包名，
        targetProject是通往包的路径-->
        <javaModelGenerator targetPackage="model" targetProject="D:\tool\develop\springboot-seata\src\main\java\com\zhoufu\springbootseata">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- *Mapper.xml 文件的位置 ,targetPackage是要放置生成文件的包名，
        targetProject是通往包的路径-->
        <sqlMapGenerator targetPackage="mapper" targetProject="D:\tool\develop\springboot-seata\src\main\java\com\zhoufu\springbootseata">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <!-- *Mapper.java 接口文件的位置 targetPackage是要放置生成文件的包名，
        targetProject是通往包的路径-->
        <javaClientGenerator targetPackage="mapper" targetProject="D:\tool\develop\springboot-seata\src\main\java\com\zhoufu\springbootseata" type="XMLMAPPER">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <!-- 相关表的配置 tableName表名即可,domainObjectName为生成文件名前缀-->
        <table tableName="product" domainObjectName="Product"
               enableCountByExample="false" enableDeleteByExample="false" enableSelectByExample="false"
               enableUpdateByExample="false"/>
    </context>
</generatorConfiguration>